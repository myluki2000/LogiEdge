@page "/item/{ItemId}"
@using System.Text.Json
@using LogiEdge.WarehouseService.Data
@using LogiEdge.WarehouseService.Persistence
@using Microsoft.EntityFrameworkCore

@inject IDbContextFactory<WarehouseDbContext> WarehouseDbContextFactory;

@code {
    [Parameter]
    public required string ItemId { get; init; }
}

@{
    WarehouseDbContext warehouseDbContext = WarehouseDbContextFactory.CreateDbContext();
    Item item = warehouseDbContext.Items
        .Include(x => x.Customer)
        .Include(x => x.ItemStates)
        .ThenInclude(st => st.Warehouse)
        .First(x => x.Id == Guid.Parse(ItemId));
}

<h3>ItemPage</h3>

<table>
    <tr>
        <th>Id</th>
        <td>@item.Id</td>
    </tr>
    <tr>
        <th>Customer</th>
        <td><a href="/items?CustomerId=@(item.CustomerId)">@item.Customer.Name</a></td>
    </tr>
    <tr>
        <th>ItemNumber</th>
        <td><a href="/items?ItemNumber=@(item.ItemNumber)">@item.ItemNumber</a></td>
    </tr>
    <tr>
        <th>Comments</th>
        <td>@item.Comments</td>
    </tr>
</table>

<h4>Additional Properties</h4>

<table>
    @foreach (JsonProperty property in item.AdditionalProperties.RootElement.EnumerateObject())
    {
        <tr>
            <th>@property.Name</th>
            <td><a href="/items?@(property.Name)=@(property.Value.ToString())">@property.Value.GetString()</a></td>
        </tr>
    }
</table>

<h4>Item States:</h4>
@foreach (ItemState state in item.ItemStates)
{
    <table>
        <tr>
            <th>Date</th>
            <td>@state.Date.ToLocalTime()</td>
        </tr>
        <tr>
            <th>Location</th>
            <td>@state.Location</td>
        </tr>
        <tr>
            <th>Warehouse</th>
            <td><a href="/items?WarehouseId=@(state.WarehouseId)">@state.Warehouse.Name</a></td>
        </tr>
    </table>
}
