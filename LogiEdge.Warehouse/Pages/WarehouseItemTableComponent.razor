@using LogiEdge.WarehouseService.Data
@code {
    [Parameter]
    public required IEnumerable<Item> Items { get; set; }
}

<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Item Number</th>
        <th>Location</th>
    </tr>
    </thead>
    <tbody>
    @foreach(Item item in Items)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.ItemNumber</td>
            <td>
                @item.ItemStates.MaxBy(x => x.Date).Location
            </td>
        </tr>
    }
    </tbody>
</table>