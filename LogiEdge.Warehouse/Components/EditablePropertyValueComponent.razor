@code {
    [Parameter]
    public required object? PropertyValue { get; set; }
    [Parameter]
    public EventCallback OnEditingStarted { get; set; }
    [Parameter]
    public EventCallback<object?> OnEditingFinished { get; set; }
    [Parameter]
    private bool IsEditing { get; set; }
    [Parameter]
    private bool AllowEditingOnClick { get; set; }

    private void PropertyValueOnClick()
    {
        if (!AllowEditingOnClick)
            return;

        IsEditing = true;
        OnEditingStarted.InvokeAsync();
    }

}

@if (IsEditing)
{

}
else
{
    <PropertyValueComponent PropertyValue="@PropertyValue" @onclick="PropertyValueOnClick" />
}
